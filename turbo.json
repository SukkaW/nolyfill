{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "tsconfig.json",
    ".eslintrc.json"
  ],
  "pipeline": {
    "//#codegen": {},
    "build": {
      "dependsOn": [
        "^build",
        "//#codegen"
      ],
      "outputs": [
        ".next/**",
        "dist/**",
        "!.next/cache/**"
      ]
    },
    "lint": {},
    "build:analyze": {
      "dependsOn": [
        "^build",
        "//#codegen"
      ],
      "env": [
        "ANALYZE"
      ]
    }
  }
}
