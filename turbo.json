{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "tsconfig.json",
    ".eslintrc.json"
  ],
  "tasks": {
    "topological": {
      "dependsOn": [
        "^topological"
      ]
    },
    "//#build:tsc": {
      "inputs": [
        "packages/data/**",
        "packages/tools/shared/**"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "//#codegen": {
      "dependsOn": [
        "//#build:tsc"
      ],
      "inputs": [
        "create.ts",
        "packages/data/**",
        "packages/tools/shared/**"
      ]
    },
    "build": {
      "dependsOn": [
        "^build",
        "//#codegen"
      ],
      "outputs": [
        ".next/**",
        "dist/**",
        "!.next/cache/**"
      ]
    },
    "@nolyfill/es-iterator-helpers#build": {
      "dependsOn": [
        "^build",
        "//#codegen"
      ]
    },
    "nolyfill#build": {
      "dependsOn": [
        "@nolyfill/es-iterator-helpers#build"
      ],
      "env": [
        "ANALYZE"
      ]
    },
    "nolyfill#build:analyze": {
      "dependsOn": [
        "@nolyfill/es-iterator-helpers#build:analyze"
      ],
      "env": [
        "ANALYZE"
      ]
    },
    "lint": {},
    "build:analyze": {
      "dependsOn": [
        "^build",
        "//#codegen"
      ]
    }
  }
}
